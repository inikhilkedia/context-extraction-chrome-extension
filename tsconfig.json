{
	"compilerOptions": {
		"target": "ES2020", // Target modern browsers
		"lib": [
			"ES2020",
			"DOM"
		], // Explicitly include DOM and ES2020 libs
		"module": "ES2020", // Use ES modules
		"outDir": "./dist", // Output directory for compiled JS
		"rootDir": ".", // Source directory (project root)
		"strict": true, // Enable all strict type-checking options
		"esModuleInterop": true, // Enables emit interoperability between CommonJS and ES Modules
		"skipLibCheck": true, // Skip type checking of declaration files
		"forceConsistentCasingInFileNames": true, // Disallow inconsistently-cased references to the same file.
		"moduleResolution": "node", // How modules get resolved (important for imports)
		"resolveJsonModule": true, // Allows importing JSON files
		"isolatedModules": true, // Ensures TS files can be transpiled independently (good practice)
		"typeRoots": [
			"./node_modules/@types"
		],
		"types": [
			"chrome"
		],
		// "noEmit": true, // Uncomment if using a bundler like Webpack/Parcel for emit
	},
	"include": [
		"*.ts",
		"node_modules/@types/chrome/index.d.ts"
	],
	"exclude": [
		"node_modules",
		"dist"
	]
}